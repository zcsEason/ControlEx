<Window x:Class="ControlExTest.BorderTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlExTest" xmlns:controlex="clr-namespace:ControlEx;assembly=ControlEx"
        mc:Ignorable="d"
        Title="BorderTest" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Background="Red" CornerRadius="20" Margin="30">
            <Button/>
        </Border>
        <controlex:BorderEx Background="Black" Grid.Column="1" CornerRadius="80,50,60,90" Margin="30" IsClipToCorner="True">
            <Button/>
        </controlex:BorderEx>
    </Grid>
</Window>
